---
interface Props {
    tag: string;
}
const { tag } = Astro.props;
---

<span class="tag">{tag}</span>


<style is:global>
.tag {    
    position: relative;
    background-color: hsla(0, 0%, 100%);
    border: 2px solid grey;
    padding-block: .25rem;
    padding-inline: .5rem;
	border-radius: .25rem;
    cursor: pointer;    
    white-space: nowrap;
    transition: background-color 300ms, color 300ms;
}
.tag:hover {
    background-color: black;
    color: white;
}

.tag__active {    
    padding-right: 2rem;
}
.tag__active::after {
    content: '';
    position:absolute;
    background-color: black;
    background-image: url('/assets/portfolio/close.svg');
    background-repeat: no-repeat;
    background-position: center;
    right: 0;
    top: 0;
    width: 1.5rem;
    height: 100%;
    /* border: 2px solid orange; */
}
</style>